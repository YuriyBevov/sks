mixin state-modal(data)
  .modal.state-modal(class= data.cls ? data.cls : null id= data.id ? data.id : null)
    .modal__overlay
      .modal__content
        .modal__header
          button(type="button" aria-label="Закрыть").modal-closer
            svg(width="18" height="18")
              use(xlink:href="./assets/sprite.svg#icon-close")

        .modal__body
          svg(width="48" height="48")
            use(xlink:href=`./assets/sprite.svg#icon-${data.icon}`)
          span.lw-section-title!= data.title
